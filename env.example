# Gemini configuration (defaults to the cost-efficient Flash tier)
export GEMINI_API_KEY=
export GEMINI_MODEL_NAME=gemini-flash-latest

# Mistral text models (Pixtral uses its own key, see below)
export MISTRAL_API_KEY=
export MISTRAL_MODEL_NAME=mistral-small-latest

# Pixtral vision models require a dedicated credential
export PIXTRAL_MODEL=pixtral-12b-2409
export PIXTRAL_API_KEY=

# OpenAI configuration (defaults to the cheapest GPT-4o-mini tier)
export OPENAI_API_KEY=
export OPENAI_MODEL_NAME=gpt-4o-mini


# Groq configuration (defaults to Groq's Kimi K2 instruct tier)
export GROQ_API_KEY=
export GROQ_MODEL_NAME=moonshotai/kimi-k2-instruct-0905

# DeepSeek configuration
export DEEPSEEK_API_KEY=
export DEEPSEEK_MODEL_NAME=deepseek-chat


# Langsmith
export LANGCHAIN_TRACING_V2=false
export LANGSMITH_ENDPOINT=https://api.smith.langchain.com
export LANGSMITH_API_KEY=
export LANGSMITH_PROJECT=course-generator

# Tavily search
export TAVILY_API_KEY=

# Google Books API (for bibliography book links)
# Get from: https://console.cloud.google.com/apis/credentials
export GOOGLE_BOOKS_API_KEY=

# YouTube Data API v3 (for video search; falls back to yt-dlp if missing)
# Get from: https://console.cloud.google.com/apis/library/youtube.googleapis.com
export YOUTUBE_API_KEY=

# ElevenLabs TTS (for high-quality cloud TTS podcast generation)
# Get from: https://elevenlabs.io/app/settings/api-keys
export ELEVENLABS_API_KEY=